<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_700</item>
        <item name="colorAccent">@color/material_accent_A200</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item name="android:textColorPrimary">@android:color/black</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:editTextColor">@android:color/black</item>
    </style>


    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/backgroud_dark_grey</item>
    </style>


    <style name="Edit" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
